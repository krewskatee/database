<%= form_tag "/recipes/create", method: :post do %>
  <div>
    <label for="Title">Title:</label> <input type="text" name="title" class="form-control" width="25%" ; id="Title">
  </div>
  <div>
    <label for="User Id">User Id:</label> <input type="text" name="user_id" value="<%= current_user %>" id="Chef">
  </div>
  <div>
    <label for="ingredients">Ingredients:</label> <input type="ingredients" name="form_message" id="Ingredients">
  </div>
  <div>
    <label for="Directions">Directions:</label> <input type="text" name="directions" id="Directions">
  </div>
  <button type="submit" class="btn btn-primary">Create Recipe</button>
<% end %>
